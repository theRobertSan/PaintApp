<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash">

    <TextView
        android:id="@+id/frontpage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/frontpage_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/frontpage_title"
        app:layout_constraintStart_toStartOf="@+id/frontpage_title"
        app:layout_constraintTop_toBottomOf="@+id/frontpage_title"
        app:srcCompat="@drawable/paint_art_png_transparent"
        tools:srcCompat="@drawable/paint_art_png_transparent" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="showMain"
        android:text="@string/start_button"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/frontpage_image"
        app:layout_constraintStart_toStartOf="@+id/frontpage_image"
        app:layout_constraintTop_toBottomOf="@+id/frontpage_image" />
</androidx.constraintlayout.widget.ConstraintLayout>